    Style="{StaticResource MaterialDesignTitleTextBlock}">  Giáo dục CD:</TextBlock>
                        <TextBox TextChanged="CD15_TextChanged" LostFocus="CD15_LostFocus" GotFocus="CD15_GotFocus" Name="CD15" Width="100" Margin="5,0,5,0" Text="0"
