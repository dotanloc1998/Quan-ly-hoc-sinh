    Style="{StaticResource MaterialDesignTitleTextBlock}">  Công nghệ</TextBlock>
                        <TextBox TextChanged="CN15_TextChanged" LostFocus="CN15_LostFocus" GotFocus="CN15_GotFocus" Name="CN15" Width="100" Margin="5,0,5,0" Text="0"
